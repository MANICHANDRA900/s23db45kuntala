extends layout

block content
  h1= title
  p Welcome to modified text
  <button (type="button", class="btn btn-secondary")> Press Me</button>
  <br>
  <button (type="button", class="btn btn-secondary", onclick="goFaster()")>Increase the Speed</button>
  <br>
  div#faster Increase the speed

  script.
    var mph = 20;
    var change = 1;
    function goFaster() {
        mph += change;
        change++;
        document.getElementById('faster').innerText = `MPH ${mph} with change ${change}`;
    }



