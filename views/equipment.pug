extends layout

block content
    h1= title
    -
        var equipment = [
        {"equipmentType": "Treadmill", "condition": "Brand New", "quantity": 10},
        {"equipmentType": "Dumbbells", "condition": "Slightly Used", "quantity": 25},
        {"equipmentType": "Exercise Bike", "condition": "Refurbished", "quantity": 15}
        ]

    div(class="container-fluid")
        div(class="row")
            each object, index in equipment
                div(class="col-sm-2", onclick=`buy(${index})`) 
                    | #{object.equipmentType}, #{object.condition}, #{object.quantity}Rs
                script.
                    function buy(a) {
                        alert(`You purchased Item ${a + 1}`);
                    }
